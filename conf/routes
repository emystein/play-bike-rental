GET     /                                         controllers.HomeController.index
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                             controllers.Assets.versioned(path="/public", file: Asset)

POST    /users                                    controllers.UserController.create()
GET     /users/:id                                controllers.UserController.retrieve(id: String)
GET     /users/:id/rent-token                     controllers.UserController.reserveTokenForUser(id: String)

POST    /bikes                                    controllers.BikeController.create()
GET     /bikes/:serialNumber                      controllers.BikeController.retrieve(serialNumber: String)

POST    /bike-stations                            controllers.BikeStationController.create()
GET     /bike-stations/:id                        controllers.BikeStationController.retrieve(id: String)
GET     /bike-stations/:id/anchorages/:anchorageId/:tokenValue     controllers.BikeStationController.pickupBike(id: String, anchorageId: Int, tokenValue: String)

