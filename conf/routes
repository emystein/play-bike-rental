# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET      /                                  controllers.HomeController.index

POST     /users                             controllers.UserController.create()
GET      /users/:id                         controllers.UserController.retrieve(id: String)

POST     /bikes/:serialNumber               controllers.BikeController.create(serialNumber: String)
GET      /bikes/:serialNumber               controllers.BikeController.retrieve(serialNumber: String)

GET      /rent-tokens/:userId               controllers.RentTokenRegistryController.getNewToken(userId: String)
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

