GET     /                                         controllers.HomeController.index
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                             controllers.Assets.versioned(path="/public", file: Asset)

POST    /users                                    rest.controllers.UserController.create()
GET     /users/:id                                rest.controllers.UserController.retrieve(id: String)
GET     /users/:id/rent-token                     rest.controllers.UserController.reserveTokenForUser(id: String)

POST    /bikes                                    rest.controllers.BikeController.create()
GET     /bikes/:serialNumber                      rest.controllers.BikeController.retrieve(serialNumber: String)

POST    /bike-stations                            rest.controllers.BikeStationController.create()
POST    /bike-stations/:id/anchorages/:anchorageId/bike     rest.controllers.BikeStationController.parkBike(id: String, anchorageId: Int, bikeSerialNumber: Option[String])
GET     /bike-stations/:id/anchorages/:anchorageId/bike     rest.controllers.BikeStationController.pickupBike(id: String, anchorageId: Int, rentToken: Option[String])
GET     /bike-stations/:id                        rest.controllers.BikeStationController.retrieve(id: String)

