# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                                         controllers.HomeController.index

POST    /users                                    controllers.UserController.create()
GET     /users/:id                                controllers.UserController.retrieve(id: String)
GET     /users/:id/rent-token                     controllers.UserController.reserveTokenForUser(id: String)

POST    /bikes/:serialNumber                      controllers.BikeController.create(serialNumber: String)
GET     /bikes/:serialNumber                      controllers.BikeController.retrieve(serialNumber: String)

GET     /bike-stations/:stationId/anchorages/:anchorageId/:tokenValue     controllers.BikeStationController.pickupBike(stationId: String, anchorageId: Int, tokenValue: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                             controllers.Assets.versioned(path="/public", file: Asset)

